<h2>Add Activity</h2>

<form action="/activities/add-activity" method="post" enctype="multipart/form-data">

    <label for="name">Name of Activity:</label>
    <input id="name" type="text" name="name">

    {{!-- adding drop down thing for categories --}}

    <select name="category" id="">
        <option value="" disabled selected>Type of workout</option>
        <option value="Run">Run</option>
        <option value="Walk">Walk</option>
        <option value="Bike">Bike</option>
        <option value="Hike">Hike</option>
    </select>



    <label for="description">Description:</label>
    <input id="description" type="text" name="description">

    {{!-- <label for="imageURL">Image</label>
    <input id="imageUrl" type="text" name="imageURL"> --}}
    <input type="file" name="activity-cover-image" />

    <label for="date" class="form-label">Date:</label>
    <input type="date" id="date" name="date" class="form-control">

    <label for="time" class="form-label">Time:</label>
    <input type="time" id="time" name="time" class="form-control">



    {{!-- <form action="/movies/create" method="post" enctype="multipart/form-data"> </form> --}}


    <button type="submit">Add Activity</button>


</form>
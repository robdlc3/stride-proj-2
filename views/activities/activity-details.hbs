<h2>Activity Details </h2>

<img class="activity-picture" src="{{imageUrl}}" alt="activity-picture">

<h3>{{name}}</h3>

<p>{{date}} {{time}}</p>



<p>{{description}}</p>



<h6>Activity by: {{owner.fullName}}</h6>

<a href="/activities/edit/{{_id}}">Edit</a>

<a href="/activities/delete/{{_id}}">
    <button>Delete</button></a>


<hr>

<h4>Comments</h4>



{{#if reviews}}

{{#each reviews}}

<p>{{comment}}</p>
<h6>- {{user.fullName}}</h6>

<br>

{{/each}}


{{else}}

<p>No comments</p>

{{/if}}
<form action="/reviews/add-review/{{_id}} " method="post">
    <label for="">Add Comment:</label>
    <input id="comment" name="comment" type="text">
    <button type="submit">Submit Comment</button>
</form>